<h2>Show Details</h2>

<% content_for(:page_header) do %>
  <%= "Sensor detail" %>
<% end %>
<% content_for :panel_heading do %><%= @sensor.name %><% end %>

<p>
  <strong>Name:</strong>
  <%= @sensor.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @sensor.description %>
</p>

<p>
  <strong>Model:</strong>
  <%= @sensor.model %>
</p>

<table>
    <tr>
      <th>Sensor ID</th>
      <th>Value</th>
      <th>Created At</th>
    </tr>
  <% @sensor.readings.each do |reading| %>
  <tr>
    <td><%= "#{reading.sensor.id}" %></td>
    <td><%= "#{reading.value}" %></td>
    <td><%= "Time Stamp: #{reading.created_at}" %></td>
    </tr>
    <% end %>
  </table>
